<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <!--
        Added the constraints for entity Notification.
    -->
    <changeSet id="20251216070050-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="comment_id"
                                 baseTableName="notification"
                                 constraintName="fk_notification__comment_id"
                                 referencedColumnNames="id"
                                 referencedTableName="post_comment"
                                 />

        <addForeignKeyConstraint baseColumnNames="post_id"
                                 baseTableName="notification"
                                 constraintName="fk_notification__post_id"
                                 referencedColumnNames="id"
                                 referencedTableName="post_feed"
                                 />

        <addForeignKeyConstraint baseColumnNames="message_id"
                                 baseTableName="notification"
                                 constraintName="fk_notification__message_id"
                                 referencedColumnNames="id"
                                 referencedTableName="direct_message"
                                 />

        <addForeignKeyConstraint baseColumnNames="recipient_id"
                                 baseTableName="notification"
                                 constraintName="fk_notification__recipient_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_lite"
                                 />

        <addForeignKeyConstraint baseColumnNames="actor_id"
                                 baseTableName="notification"
                                 constraintName="fk_notification__actor_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_lite"
                                 />
    </changeSet>
</databaseChangeLog>
